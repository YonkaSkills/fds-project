<div style="width:95%; margin:20px auto; font-size:24px; text-align:center;">
  <b>Total Items Ordered:</b> <span id="totalQty">0</span><br>
  <b>Total Price:</b> â‚¹<span id="totalPrice">0</span>
</div>

<script>
let totalQty = 0;
let totalPrice = 0;

function addItem(id, price) {
  let qtySpan = document.getElementById(id);
  qtySpan.innerText = parseInt(qtySpan.innerText) + 1;

  totalQty++;
  totalPrice += price;

  updateTotal();
}

function removeItem(id, price) {
  let qtySpan = document.getElementById(id);
  let currentQty = parseInt(qtySpan.innerText);

  if (currentQty > 0) {
    qtySpan.innerText = currentQty - 1;
    totalQty--;
    totalPrice -= price;
    updateTotal();
  }
}

function updateTotal() {
  document.getElementById("totalQty").innerText = totalQty;
  document.getElementById("totalPrice").innerText = totalPrice;
}
</script>

